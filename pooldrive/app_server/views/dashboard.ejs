<!-- views/dashboard.ejs -->
<!doctype html>
<html>

<head>

    <!-- preloader -->
    <link rel="stylesheet" href="/public/css/themes/white/pace-theme-flash.css">
    <script src="/public/js/pace.min.js"></script>
    <style>
        #map {
            height: 500px;
        }
    </style>
    <!--- basic page needs -->
    <meta charset="utf-8">
    <title>Dashboard - Eco Drive</title>
    <meta name="description" content="">
    <meta name="author" content="">

    <!-- mobile specific metas -->
    <meta name="viewport" content="user-scalable=no, width=device-width, initial-scale=1.0" />
    <meta name="apple-mobile-web-app-capable" content="yes" />

    <!-- CSS -->
    <link rel="stylesheet" href="/public/css/bootstrap.min.css">
    <link rel="stylesheet" href="/public/css/erkab.min.css">
    <link rel="stylesheet" href="/public/css/ticker.css">

    <!-- favicons -->
    <link rel="icon" type="image/png" href="/public/images/favicon-32x32.png" sizes="32x32" />
    <link rel="icon" type="image/png" href="/public/images/favicon-16x16.png" sizes="16x16" />
    <meta name="viewport" content="width=device-width,user-scalable=no" />
    <link rel="manifest" href="../../manifest.json">
</head>

<body>

    <% include templates/header.ejs %>

        <!-- START OF CHANGEABLE VIEW -->
        <div id="changeableView">

            <!-- Weather widget -->
            <a class="weatherwidget-io" href="https://forecast7.com/en/16d1774d78/belagavi/" data-label_1="BELAGAVI" data-label_2="WEATHER" data-font="Ubuntu" data-icons="Climacons Animated" data-mode="Current" data-days="3" data-theme="pure" data-textColor="#393953"
                style="height: 300px !important;">Belagavi
        WEATHER</a>

            <!-- Latest Requests ticker -->
            <div class="ticker-container">
                <!-- <div class="ticker-caption">
            <p class="uppercase">Latest Requests</p>
        </div> -->
                <ul>
                    <% var count = 0;
            for (var i = 0; i < pendingRides.length; i++) {
                if (pendingRides[i].userId == user.id)
                    count++;
            }
            if(count == pendingRides.length) { %>
                        <div>
                            <li><span class="latest-requests-ticker"><i class="fa fa-exclamation-circle"></i> No requests available. Check back in a few!</span>
                            </li>
                        </div>
                        <div>
                            <li><span class="latest-requests-ticker"><i
                                class="fa fa-exclamation-circle"></i> Nothing yet <%= user.firstName %>. Refresh?</span>
                            </li>
                        </div>
                        <div>
                            <li><span class="latest-requests-ticker"><i class="fa fa-exclamation-circle"></i> How about you send a request to get the ball rolling!</span>
                            </li>
                        </div>
                        <% } else { %>
                            <% for(var i = 0; i < pendingRides.length; i++) { %>
                                <% if(pendingRides[i].userId != user.id) { %>
                                    <div>
                                        <li><span class="latest-requests-ticker"><span
                                class="latest-requests-ticker badge badge-pill badge-warning uppercase d-inline"><%= pendingRides[i].userType %></span> <i class="fa fa-fw fa-calendar"></i>
                                            <%= pendingRides[i].date %> - <i class="fa fa-fw fa-clock-o"></i>
                                                <%= pendingRides[i].time %> - <i class="fa fa-fw fa-map-marker"></i>
                                                    <%= pendingRides[i].area %>
                                                        </span>
                                        </li>
                                    </div>
                                    <% } %>
                                        <% } %>
                                            <div>
                                                <li><span class="latest-requests-ticker"><i
                                class="fa fa-comment"></i> That's all for now! - Eco Drive</span>
                                                </li>
                                            </div>
                                            <% } %>
                </ul>
            </div>

            <!-- Google Map (User Location) -->
            <div id="map" style="margin-top:52px"></div>

            <div id="rideDiv">
                <a id="findARideBtn" class="btn btn-lg btn-main" href="/request"><i class="fa fa-fw fa-search"></i><span class="badge uppercase ">Find a Ride</span></a>
            </div>
        </div>
        <!-- END OF CHANGEABLE VIEW -->

        <% include templates/preloader.ejs %>

            <!-- Java Script --->
            <script src="/public/js/jquery-2.1.3.min.js"></script>
            <script src="/public/js/main.js"></script>
            <script src="/public/js/mapUtils.js"></script>
            <script>
                var map;

                function iniMap() {
                    map = new google.maps.Map(document.getElementById('map'), {
                        center: {
                            lat: -34.397,
                            lng: 150.644
                        },
                        zoom: 9
                    });

                    var marker = new google.maps.Marker({
                        position: {
                            lat: -34.397,
                            lng: 150.644
                        },
                        map: map,
                        title: 'Hello World!',

                        animation: google.maps.Animation.BOUNCE,
                        draggable: true
                    });
                }
            </script>
            <script async defer src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCc7FZQ6jG2VcxnxbMNdkPFFzrUsJxq-ys&callback=initMap">
            </script>
            <script src="/public/js/ticker.js"></script>
            <script>
                ! function(d, s, id) {
                    var js, fjs = d.getElementsByTagName(s)[0];
                    if (!d.getElementById(id)) {
                        js = d.createElement(s);
                        js.id = id;
                        js.src = "https://weatherwidget.io/js/widget.min.js";
                        fjs.parentNode.insertBefore(js, fjs);
                    }
                }(document, "script", "weatherwidget-io-js");
            </script>
</body>

</html>