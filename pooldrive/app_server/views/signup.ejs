<!-- views/signup.ejs -->
<!doctype html>
<html>
<head>

    <!-- preloader -->
    <script src="/public/js/pace.min.js"></script>

    <!--- basic page needs -->
    <meta charset="utf-8">
    <title>Eco Drive - Sign up</title>

    <meta name="viewport" content="user-scalable=no, width=device-width, initial-scale=1.0"/>
    <meta name="apple-mobile-web-app-capable" content="yes"/>

    <!-- CSS -->
    <meta name="viewport" content="width=device-width,user-scalable=no"/>
    <link rel="manifest" href="../../manifest.json">
    <link rel="stylesheet" href="/public/css/bootstrap.min.css">
    <link rel="stylesheet" href="/public/css/erkab.min.css">
    <link rel="stylesheet" href="/public/css/erkab.css">

    <!-- favicons -->
    <link rel="icon" type="image/png" href="/public/images/favicon-32x32.png" sizes="32x32"/>
    <link rel="icon" type="image/png" href="/public/images/favicon-16x16.png" sizes="16x16"/>

    <script type="text/javascript">
        function showfield(name){
          if(name=='Bike')document.getElementById('div1').innerHTML='<input type="number" class="input-margin-auto" name="cc" placeholder="Bike CC"/>';
          else document.getElementById('div1').innerHTML='';
        }
    </script>

    <style>

    </style>

</head>

<body>

<div class="container-fluid padding-top-zero">
    <div class="row">
        <div class="col-xs-12 text-center">
            <h1 class="text-center uppercase erkab-title-sm adjusted-margin-and-spacing"><i
                        class="fa fa-car"></i> Eco Drive</h1>
            <h1 class="text-center uppercase adjusted-margin-and-spacing"><i class="fa fa-sign-in"></i> Sign up</h1>

            <!-- show any messages that come back with authentication -->
            <% if (message.length > 0) { %>
            <h5><i class="fa fa-warning"></i> <%= message %></h5>
            <% } %>
            <br>

            <!-- SIGNUP FORM -->
            <form id="register-form" action="/signup" method="post">
                <input type="text" class="input-margin-auto nameFields" name="firstName" placeholder="First name">
                <input type="text" class="input-margin-auto nameFields" name="lastName" placeholder="Last name" ><br><br>
                <input type="text" class="input-margin-auto" name="email" placeholder="Email"><br>
                <input type="password" class="input-margin-auto" name="password" placeholder="Password"><br>
                <input type="text" class="input-margin-auto" name="mobileNum" placeholder="Mobile No."><br>
                <select  class="input-margin-auto" name="mode_trans" id="mode_trans" onchange="showfield(this.options[this.selectedIndex].value)">
                    <option>Select Preferred Vehicle</option>
                    <option value="Car">Car</option>
                    <option value="Bike">Bike</option>
                </select><br>
                 <div id="div1"></div><br>
                <input type="text" class="input-margin-auto" name="plate" placeholder="Number Plate "><br>
                <div id="div1"></div>
                <input type="number" class="input-margin-auto" name="age" placeholder="Age of vehicle "><br>
                <select class="input-margin-auto">
                    <option>Fuel</option>
                    <option value="Petrol">Petrol</option>
                    <option value="Diesel">Diesel</option>
                </select><br>
                <div class="btn-group" data-toggle="buttons">
                    <label class="btn btn-main gender-btn active">
                        <input type="radio" name="gender" value="Male" autocomplete="off" checked><i
                                class="fa fa-male"></i></label>
                    <label class="btn btn-main gender-btn">
                        <input type="radio" name="gender" value="Female" autocomplete="off"><i
                                class="fa fa-female"></i></label>
                </div>
                <br><br>
                <button id="loginOrSignupBtn" type="submit" class="btn btn-main uppercase">Sign Up</button>
            </form>
            <hr>
            <p>Already have an account? <a href="/login">Login</a>.</p>
            <p>or go back <a href="/">home</a>.</p>
        </div>
    </div>
</div>

<% include templates/preloader.ejs %>

<script src="/public/js/jquery-2.1.3.min.js"></script>
<script src="/public/js/main.js"></script>
<script src="/public/js/jquery.js"></script>
<script src="/public/js/bootstrap.js"></script>
<script src="//ajax.aspnetcdn.com/ajax/jquery.validate/1.13.0/jquery.validate.min.js"></script>
<script src="//ajax.aspnetcdn.com/ajax/jquery.validate/1.13.0/additional-methods.min.js"></script>
<script src="/public/js/signup/validation.js"></script>

</body>
</html>
